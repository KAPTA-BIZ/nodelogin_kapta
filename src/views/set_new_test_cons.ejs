<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Login</title>
    <script type="text/javascript">
        var Tests = <%- JSON.stringify(Tests) %>;
        function changeMaxValue(index) {

            var inputMaxCodes = document.getElementById("maxcodes");
            if (index > 0)
                inputMaxCodes.setAttribute("max", Tests[index - 1].codes_availables);
            else
                inputMaxCodes.setAttribute("max", 0);
        }
    </script>
    <% include partials/head %>
</head>

<body class="signup">
    <section id="bg-cont">
        <div class="container">
            <div class="col-sm-6 mx-auto">
                <div class="card mt-5">
                    <div class="card-body">
                        <div class="col-sm-12 ">
                            <div class="row">
                                <div class="col login-img" style="border-right: 1px solid rgba(0,0,0,.1);">
                                    <img src=/img/logo/kapta.png alt="logo de K@PTA" />
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="col-sm-12" style="margin-top: 20px;">
                            <h1>Asignar prueba</h1>
                        </div>
                        <!-- Message -->
                        <% if(typeof message !== 'undefined' && message==1){ %>
                            <div class="alert alert-danger" role="alert">
                                <strong lang="es">Error!! Debe seleccionar un link</strong>
                                <strong lang="en">Error!!! You must select a link</strong>
                            </div>
                            <%}%>
                                <!-- form -->
                                <form action="/setnewtest_cons" method="post">
                                    <div class="form-group">
                                        <label for="testlist">
                                            <span lang="es">Seleccione prueba</span>
                                            <span lang="en">Choose test</span>
                                        </label>
                                        <select name="testlist" id="testlist" class="form-control" onchange="changeMaxValue(this.selectedIndex)" required>
                                            <option selecte value="-1">...</option>
                                            <% Tests.forEach(function(Test) { %>
                                                <option value="<%=Test._id%>">
                                                    <%=Test.test_name %>
                                                </option>
                                                <% }); %>
                                        </select>
                                        <label for="maxcodes">
                                            <span lang="es">Indique el número máximo de códigos</span>
                                            <span lang="en">Specify the maximum number of codes</span>
                                        </label>
                                        <input type="number" class="form-control" name="maxcodes" id="maxcodes" min="1" max="0" required>
                                        <input name="consultant_email" id="consultant_email" style="display:none" value="<%=consultant.local.email%>" />
                                        <input name="admin_email" id="admin_email" style="display:none" value="<%=admin.local.email%>" />
                                    </div>

                                    <input type="submit" class="btn btn-dark btn-lg" value="Registrar">
                                </form>

                                <hr>
                                <div class="text-center">
                                </div>
                    </div>
                </div>
            </div>
        </div>


    </section>
</body>

</html>