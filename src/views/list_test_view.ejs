<!DOCTYPE html>
<html lang="en">
   <head>
      <title>Resultados por evaluación</title>
      <% include partials/head %>
  
   </head>
   <body>
      <div class="main-panel">
         <% include partials/navbar %>
         <div class="content">
            <div class="container-fluid">
               <div class="row">
                  <div class="col-4" style="margin: 20px;" >
                     <form action="/search" method="GET">
                        <label for="exampleInputEmail1">Buscar por categoria</label><br>
                        <select name="search" class="custom-select mb-2 mr-sm-2 mb-sm-0" id="inlineFormCustomSelect">
                           <option selected>Seleccionar...</option>
                           <% long_cat = cat.length; for(i=0; i<long_cat; i++) { %>  
                           <option value="<%= cat[i].name %>"><%= cat[i].name %></option>
                           <% }%>
                        </select>
                        <button type="submit" class="btn btn-primary">Buscar</button>
                     </form>
                     <br>
                  </div>
                  <div class="col-7" style="margin: 20px;" >
                  
                    <form action="/date" method="GET">
                      <label for="exampleInputEmail1">Buscar por fecha</label>
                      <br/>
                      <div class="input-daterange input-group" id="datepicker">
                        <div class="input-group-addon">Desde</div>
                        <input type="text" id="from" name="start">
                        <div class="input-group-addon">Hasta</div>
                        <input type="text" id="to" name="end">
                        <input type="text" value="<%= url %>" name="id" style="display:none">
                        <button type="submit" class="btn btn-primary" style="margin-left: 10px;">Buscar</button>
                        
                      </div>

                    </form>


                    <script>
                      $( function() {
                        var dateFormat = "yyyy-mm-dd",
                          from = $( "#from" )
                            .datepicker({
                              dateFormat: "yy-mm-dd",
                              defaultDate: "+1w",
                              changeMonth: true,
                              numberOfMonths: 1
                            })
                            .on( "change", function() {
                              to.datepicker( "option", "minDate", getDate( this ) );
                            }),
                          to = $( "#to" ).datepicker({
                            dateFormat: "yy-mm-dd",
                            defaultDate: "+1w",
                            changeMonth: true,
                            numberOfMonths: 1
                          })
                          .on( "change", function() {
                            from.datepicker( "option", "maxDate", getDate( this ) );
                          });
                    
                        function getDate( element ) {
                          var date;
                          console.log(element.value)
                          try {
                            date = $.datepicker.parseDate( dateFormat, element.value );
                          } catch( error ) {
                            date = null;
                          }
                          return date;
                        }
                      } );
                    </script>
                  </div>
                  <div class="col-md-12">
                     <div class="card strpied-tabled-with-hover">
                        <div class="card-header ">
                           <h4 class="card-title">Evaluación: <% if(link[0]) { %><%= link[0].link_name %><% } else{ %><%= url %><% } %></h4>
                           <p class="card-category">En esta lista encuentra los resultados por participantede resultados del test. para consultor: <%=user.local.email%></p>
                        </div>
                        <div class="card-body table-full-width table-responsive">
                           <table class="table table-hover table-striped">
                              <% if(val==1){ %>No hay datos disponibles para esta busqueda <% }else{ %>
                              <thead>
                                 <tr>
                                    <th>Código de acceso/Participante</th>
                                    <th>Porcentaje</th>
                                    <th>Fecha</th>
                                    <th>Categoría(s)</th>
                                    <th></th>
                              </thead>
                              <tbody>
                                 <!-- TODO hacer lista de json y comparar para mostrar los que 
                                    ya se presentaron con la consulta a la base de datos -->
                                 <!--lista de access code json-->
                                 <% item.forEach(function(items){ %> 
                                 <tr>
                                    <!-- Filtrar id_inst con id capturado del instructor -->
                                    <td><%= items.access_code %></td>
                                    <td><%= items.percentage %></td>
                                    <td>
                                       <% function timeConverter(UNIX_timestamp)
                                          {
                                             var a = new Date(UNIX_timestamp * 1000);
                                             var months = ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'];
                                             var year = a.getFullYear();
                                             var month = months[a.getMonth()];
                                             var date = a.getDate();
                                             var hour = a.getHours();
                                             var min = a.getMinutes();
                                             var sec = a.getSeconds();
                                             var time = date + ' ' + month + ' ' + year + ' ' + hour + ':' + min + ':' + sec ;
                                             return time;
                                          }
                                          %><%= timeConverter(items.time_started) %>
                                    </td>
                                    <% if(items.category_results){ %>
                                    <td>
                                       <%long=(items.category_results.length); for(i=0; i<long; i++){ %>
                                       <%= items.category_results[i].name %><br> <% } %>  
                                    </td>
                                    <% } %>

                                    <td><a href="/viewinfo/<%=id_user%>&<%=items.access_code%>">Detalles</a></td>
                   
                                    <%
                                    a=0
                                    suma=0
                                    cant=(item.length*100)
                                    for(i=0; i<item.length; i++)
                                    {
                                       suma=item[i].percentage//100
                                       a=a+suma//80
                                    }
                                    
                                    %>
                                    <% console.log(a) %>
                                    <% });
                                    porcentaje=((a/cant)*100)
                                    porcentaje=porcentaje.toFixed(2)
                                    %>
                                    
                              </tbody>
                              <% } %>
                           </table>
                        </div>
                     </div>
                     <!-- defino list_array para acumular los access codes ya utilizados --> 
                     <% var list_array = [] 
                        allitem.forEach(function(allitems, index){ 
                        list_array.push(allitems.access_code) 
                        //por cada iteración me añade al list_array los access_code encontrados
                        }) %>
   
                     <div class="row">
                        <div class="col-6">
                           <div class="card strpied-tabled-with-hover">
                              <div class="card-header ">
                                 <h4 class="card-title">Estadísticas - Participantes</h4>
                              </div>
                              <div class="card-body table-full-width table-responsive">
                                 <canvas id="bar-chart" height="400" width="400"></canvas>
                           </div>
                          </div>
                        </div>
                        <div class="col-6">
                           <div class="card strpied-tabled-with-hover">
                              <div class="card-header ">
                                 <h4 class="card-title">Códigos de acceso sin usar</h4>
                              </div>
                              <div class="card-body table-full-width table-responsive">
                                 <table class="table table-hover table-striped">
                                    <tr>
                                       <th>Código de acceso</th>
                                    </tr>
                                    <% 
                                    if(aresult!=""){
                                    aresult.forEach(function(aresults, index){ 
                                       if(list_array.includes(aresults.access_code)==false){ %>
                                    <tr>
                                       <td><%=aresults.access_code%></td>
                                    </tr>
                                    <% } %>
                                    <% }); }%>
                                 </table>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
      </div>
      </div>
      <% include partials/left_column %>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js"></script>
      <script>
      /*global item*/
      var mivar = <%=porcentaje%> 
      console.log("RENDER", mivar)
      new Chart(document.getElementById("bar-chart"), {
      type: 'bar',
       data: {
         labels: ["", "", mivar + "%", "", "" ],
         datasets: [
           {
             label: "",
             backgroundColor: ["", "","#003851","",""],
             data: [0,0,mivar,0,0]
           }
         ]
       },
       options: {
         legend: { display: false },
         title: {
           display: true,
           text: 'Estadisticas generales de los usuarios que han presentado el test'
         },
         scales: {
           xAxes: [{
               display: true,
               scaleLabel: {
               display: true
               }
               }],
           yAxes: [{
               display: true,
               ticks: {
               beginAtZero: true,
               steps: 10,
               stepValue: 5,
               max: 100
               }
           }]
          }
       }
   });
</script>
   </body>
</html>