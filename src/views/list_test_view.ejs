<!DOCTYPE html>
<html lang="en">
   <head>
      <title>Resultados por evaluación</title>
      <% include partials/head %>
  
   </head>
   <body>
      <div class="main-panel">
         <% include partials/navbar %>
         <div class="content">
            <div class="container-fluid">
               <div class="row">
                  <div class="col-4" style="margin: 20px;" >
                     <form action="/searchandlink" method="GET">
                        <label for="exampleInputEmail1">Buscar por categoria</label><br>
                        <select name="search" class="custom-select mb-2 mr-sm-2 mb-sm-0" id="inlineFormCustomSelect">
                           <option selected>Seleccionar...</option>
                        <% a = [] 
                        item.forEach(function(items){ 
                           if(items.category_results){ 
                              long=(items.category_results.length)
                                 for(i=0; i<long; i++){ 
                                    if(!a.includes(items.category_results[i].name)){
                                       a.push(items.category_results[i].name)
                                    }
                                    %>
                                  <% } %>  
                           <% } %>
                         <% } )%>
                         <%for(i=0;i<a.length;i++){%>
                         <option value="<%= a[i] %>"><%= a[i] %></option>
                         <% } %>
                           
                          
                        </select>
                        <input type="text" value="<%= url %>" name="id" style="display:none">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                     </form>
                     <br>
                  </div>
                  <div class="col-7" style="margin: 20px;" >
                  
                    <form action="/date" method="GET">
                      <label for="exampleInputEmail1">Buscar por fecha</label>
                      <br/>
                      <div class="input-daterange input-group" id="datepicker">
                        <div class="input-group-addon">Desde</div>
                        <input type="text" id="from" name="start" required="">
                        <div class="input-group-addon">Hasta</div>
                        <input type="text" id="to" name="end" required="">
                        <input type="text" value="<%= url %>" name="id" style="display:none">
                        <button type="submit" class="btn btn-primary" style="margin-left: 10px;">Buscar</button>
                      </div>
                    </form>
                    
                    


                    <script>
                      $( function() {
                        var dateFormat = "yyyy-mm-dd",
                          from = $( "#from" )
                            .datepicker({
                              dateFormat: "yy-mm-dd",
                              defaultDate: "+1w",
                              changeMonth: true,
                              numberOfMonths: 1
                            })
                            .on( "change", function() {
                              to.datepicker( "option", "minDate", getDate( this ) );
                            }),
                          to = $( "#to" ).datepicker({
                            dateFormat: "yy-mm-dd",
                            defaultDate: "+1w",
                            changeMonth: true,
                            numberOfMonths: 1
                          })
                          .on( "change", function() {
                            from.datepicker( "option", "maxDate", getDate( this ) );
                          });
                    
                        function getDate( element ) {
                          var date;
                          console.log(element.value)
                          try {
                            date = $.datepicker.parseDate( dateFormat, element.value );
                          } catch( error ) {
                            date = null;
                          }
                          return date;
                        }
                      } );
                    </script>
                  </div>
                  <%
                     var access_code = []
                     item.forEach(function(items){
                     access_code.push(items.access_code)
                     })
                     
                     var totales = []
                     aresult.forEach(function(ar){
                     totales.push(ar.access_code)
                     })
                  %>
                  
                  
                  <!----- Despligue datos codigos actuales, categorias y codigos disponibles START ------>   
                  
                  <!---- codigos de acceso en esta evaluacion ----->
                  
                  <div class="col-md-4">
                     <div class="card strpied-tabled-with-hover">
                        <br><p class="card-category" style="padding-left:10px">Códigos de acceso presentados en esta evaluación: <%=access_code.length%>  </p><br>
                     </div>
                  </div>
                  
                  
                  <!---------Encontrar códigos disponibles---------->
                  
                  <!-- defino list_array para acumular los access codes ya utilizados --> 
                  <% var list_array = [] 
                     allitem.forEach(function(allitems, index){ 
                     list_array.push(allitems.access_code) 
                     //por cada iteración me añade al list_array los access_code encontrados
                     }) 
                        
                     disp = [] 
                     if(aresult!=""){
                     aresult.forEach(function(aresults, index){ 
                     if(list_array.includes(aresults.access_code)==false){ 
                     disp.push(aresults.access_code)
                   } }); }
                   
                  %>
                  </table>
                  <%disp.length%>
                  <!-------------------------------------------------->
                  
                  
                  <!---- codigos de acceso disponibles ----->
                                
                  <div class="col-md-4">
                     <div class="card strpied-tabled-with-hover">
                        <br><p class="card-category" style="padding-left:10px">Códigos disponibles <%=disp.length%>  </p><br>
                     </div>
                  </div>
                  
                  
                  <!---------- Categorias en esta evaluacion --------->
                  
                  <div class="col-md-4">
                     <!--hacer include y push para mostrar las categorias -->
                     <div class="card strpied-tabled-with-hover">
                         
                        <br><p class="card-category" style="padding-left:10px">Categorías presentadas: <%access_code%>  </p><br>
                        <p class="card-category" style="padding-left:10px">
                        <% a = [] 
                        item.forEach(function(items){ 
                           if(items.category_results){ 
                              long=(items.category_results.length)
                                 for(i=0; i<long; i++){ 
                                    if(!a.includes(items.category_results[i].name)){
                                       a.push(items.category_results[i].name)
                                    }
                                    %>
                                  <% } %>  
                           <% } %>
                         <% } )%>
                         <%for(i=0;i<a.length;i++){%>
                         <%= a[i] %><br>
                         <% } %></p><br>
                     </div>
                  </div>
                  
                  <!----- Despligue datos codigos actuales, categorias y codigos disponibles END ------>   
                        
                  <div class="col-md-12">
                     <div class="card strpied-tabled-with-hover">
                        <div class="card-header ">
                           <h4 class="card-title">Evaluación: <% if(link[0]) { %><%= link[0].link_name %><% } else{ %><%= url %><% } %></h4>
                           <p class="card-category">En esta lista encuentra los resultados por participantede resultados del test. para consultor: <%=user.local.email%></p>
                        </div>
                        <div class="card-body table-full-width table-responsive">
                           <table class="table table-hover table-striped">
                              <% if(val==1){ %>No hay datos disponibles para esta busqueda <% }else{ %>
                              <thead>
                                 <tr>
                                    <th>Código de acceso/Participante</th>
                                    <th>Porcentaje</th>
                                    <th>Fecha de presentación</th>
                                    <!--th>Categoría(s)</th>-->
                                    <th></th>
                              </thead>
                              <tbody>
                                 <!-- TODO hacer lista de json y comparar para mostrar los que 
                                    ya se presentaron con la consulta a la base de datos -->
                                 <!--lista de access code json-->
                                 <% item.forEach(function(items){ %> 
                                 <tr>
                                    <!-- Filtrar id_inst con id capturado del instructor -->
                                    <td><%= items.access_code %></td>
                                    <td><%= items.percentage %>%</td>
                                    <td>
                                       <% function timeConverter(UNIX_timestamp)
                                          {
                                             var a = new Date(UNIX_timestamp * 1000);
                                             var months = ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'];
                                             var year = a.getFullYear();
                                             var month = months[a.getMonth()];
                                             var date = a.getDate();
                                             var hour = a.getHours();
                                             var min = a.getMinutes();
                                             var sec = a.getSeconds();
                                             var time = date + ' ' + month + ' ' + year + ' ' + hour + ':' + min + ':' + sec ;
                                             return time;
                                          }
                                          %><%= timeConverter(items.time_started) %>
                                    </td>
                                    <% if(items.category_results){ %>
                                    <!--<td>
                                       <%long=(items.category_results.length); for(i=0; i<long; i++){ %>
                                       <%= items.category_results[i].name %><br> <% } %>  
                                    </td>-->
                                    <% } %>

                                    <td><a href="/viewinfo/<%=items.access_code%>">Detalles</a></td>
                   
                                    
                                    <%
                                    a=0
                                    suma=0
                                    cant=(item.length*100)
                                    for(i=0; i<item.length; i++)
                                    {
                                       suma=item[i].percentage//100
                                       a=a+suma//80
                                    }
                                    
                                    });
                                    porcentaje=((a/cant)*100)
                                    porcentaje=porcentaje.toFixed(2)
                                    %>
                                    
                              </tbody>
                              <% } %>
                             
                           </table>
                        </div>
                     </div>
                     
                     
