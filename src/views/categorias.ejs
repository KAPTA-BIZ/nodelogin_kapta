<!DOCTYPE html>
<html>
<head>
    <title lang="es">Lista de categorías</title>
    <title lang="en">Categories list</title>
	<% include partials/head %>
</head>
<body>

   <% include partials/left_column %>


  <div class="main-panel">
      <% include partials/navbar %>


      <div class="content">
          <div class="container-fluid">
              <div class="row">
                  <div class="col-md-12">
                      <div class="card strpied-tabled-with-hover">
                          <div class="card-header ">
                              <h4 lang="es" class="card-title">Categorías</h4>
                              <h4 lang="en" class="card-title">Categories</h4>
                              <p lang="es" class="card-category">Lista de categorías creadas desde Classmarker.</p>
                              <p lang="en" class="card-category">Categories list created from Classmarker.</p>
                          </div>
                          <div class="card-body table-full-width table-responsive">
                              <table class="table table-hover table-striped">
                                  <thead>
                                      <tr>
                                        <th lang="es">Nombre</th>
                                        <th lang="en">Name</th>
                                      </tr>
                                  </thead>
                                  <tbody>
                                        <% categorias.forEach(function(categoria) { %> 
                                      <tr>
                                        <td><%= categoria.name %></td>
                                      </tr>
                                      <% }); %>
                                  </tbody>
                              </table>
                          </div>
                      </div>
                  </div>
                </div>
              </div>
            </div>
    </div>  
</body>
</html>
