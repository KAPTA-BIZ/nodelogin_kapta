<!DOCTYPE html>
<html lang="en">
<head>
	<title>Authentication with Node</title>
	<% include partials/head %>
</head>
<body>

    <% include partials/left_column %>

    <div class="main-panel">
        
        <% include partials/navbar %>

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card strpied-tabled-with-hover">
                            <div class="card-header ">
                                <h4 class="card-title">Links de <%= resultUser[0].local.email %></h4>
                                <p class="card-category">Lista de links creados y asociados a los test.</p>
                            </div>
                            <div class="card-body table-full-width table-responsive">
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <tr>
                                          <th>Link</th>
                                          <th>Opcion 1</th>
                                        </tr>
                                      </thead>
                                      <tbody>
                                        <% items.forEach(function(item) { %> 
                                        <tr>
                                          <!-- Filtrar id_inst con id capturado del instructor -->
                                          <% if((item.id_inst)==(id_inst)){ %>
                                              <td><%= item.link_name %></td>
                                              <td><a href="/list_test/<%= item.link_url_id %>&<%= resultUser[0].id %>">Ver test</a></td>
                                        </tr>
                                        <% }}); %>
                                      </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                  </div>
                </div>
              </div>



      </div>


</body>
</html>
