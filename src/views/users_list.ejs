<!DOCTYPE html>
<html>

<head>
    <% include partials/head %>
</head>

<body>
    <% include partials/left_column %>
        <div class="main-panel">
            <% include partials/navbar %>
                <div class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <a lang="es" href="/signup" class="btn btn-light btn-sm float-right">Nuevo Concesionario</a>
                                <a lang="en" href="/signup" class="btn btn-light btn-sm float-right">New Dealer</a>
                            </div>
                            <% if(user.sa==1){%>
                                <div class="col-md-12">
                                    <div class="card container-fluid">
                                        <div class="card-header ">
                                            <h4 lang="es" class="card-title">Administradores</h4>
                                            <h4 lang="en" class="card-title">Administrators</h4>
                                        </div>
                                        <div class="card-body">
                                            <div class="table-responsive">
                                                <table class="table table-striped table-hover">
                                                    <thead>
                                                        <th scope="col" lang="es">Correo electrónico</th>
                                                        <th scope="col" lang="en">Email</th>
                                                        <th></th>
                                                        <th></th>
                                                    </thead>
                                                    <tbody>
                                                        <% items.forEach(function(item) { %>
                                                            <tr>
                                                                <% if(item.local) {%>
                                                                    <% if(item.sa==2){ %>
                                                                        <td>
                                                                            <%= item.local.email%>
                                                                        </td>
                                                                        <td>
                                                                            <a lang="es" href="/setnewtest/<%= item._id %>">Asignar
                                                        prueba
                                                    </a>
                                                                            <a lang="en" href="/setnewtest/<%= item._id %>">Assign
                                                        test
                                                    </a>
                                                                        </td>
                                                                        <td>
                                                                            <a lang="es" href="/tests_list_admin/<%= item._id %>">Ver
                                                        pruebas
                                                    </a>
                                                                            <a lang="en" href="/tests_list_admin/<%= item._id %>">Tests</a>
                                                                        </td>
                                                            </tr>
                                                            <% }}}); %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <%}%>
                                    <div class="col-md-12">
                                        <div class="card container-fluid">
                                            <div class="card-header ">
                                                <h4 lang="es" class="card-title">Concesionarios</h4>
                                                <h4 lang="en" class="card-title">Dealers</h4>
                                            </div>
                                            <div class="card-body">
                                                <div class="table-responsive">
                                                    <table class="table table-striped table-hover">
                                                        <thead>
                                                            <th scope="col" lang="es">Número de Concesionario</th>
                                                            <th scope="col" lang="en">Dealer Number</th>
                                                            <!-- <th scope="col" lang="es">Administrador</th>
                                                            <th scope="col" lang="en">Administrator</th> -->
                                                            <th></th>
                                                            <% if(false){%>
                                                                <th></th>
                                                                <%}%>
                                                        </thead>
                                                        <tbody>
                                                            <% consultants.forEach(function(item) { %>
                                                                <tr>
                                                                    <td>
                                                                        <%= item.email%>
                                                                    </td>
                                                                    <!-- <% if(item.admin_email){%>
                                                                        <td>
                                                                            <%= item.admin_email%>
                                                                        </td>
                                                                        <%}else{%>
                                                                            <td>*</td>
                                                                            <%}%> -->
                                                                                <td>
                                                                                    <a lang="es" href="/setCodes/<%= item.id %>">Crear nuevos códigos</a>
                                                                                    <a lang="en" href="/setCodes/<%= item.id %>">Create new codes</a>
                                                                                </td>
                                                                                <% if(false){%>
                                                                                    <td>
                                                                                        <a lang="es" href="/tests_list_cons/<%= item.id %>">Ver pruebas</a>
                                                                                        <a lang="en" href="/tests_list_cons/<%= item.id %>">Tests</a>
                                                                                    </td>
                                                                                    <%}%>
                                                                </tr>
                                                                <% }); %>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                        </div>
                    </div>
                </div>
        </div>
        <script>
            document.title = (Cookies.get("lang") == 'es') ? "Usuarios" : "Users";
            document.getElementById("switch-lang").onclick = function() {
                document.title = (Cookies.get("lang") == 'en') ? "Usuarios" : "Users";
            }
        </script>
</body>

</html>