<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Inicio</title>
    <% include partials/head %>
  </head>
  <body>


    <div class="main-panel">
    <% include partials/navbar %>
        <div class="content">
            <div class="col-sm-12">
                <div class="card">
                <div class="card-body">

                    <% if (user.sa == 1){ %>
                    <a href="/signup" class="btn btn-light btn-sm">
        
                    Registrar Instructor

                    </a>
                    
                    <a href="/list" class="btn btn-light btn-sm">
                    Ver Lista Instructores
                    </a> 
                    
                    <a href="/categories" class="btn btn-light btn-sm">
                    Ver Categorias
                    </a> 
                    <form action="/adminsearch">
                        <h5>Barra de búsqueda</h5>
                    <div class="form-group row" >
                        <div class="col-8">
                            <input class="form-control" type="search" name="search" placeholder="Buscar link o test o access code" required/>
                        </div>
                        <div class="col-2">
                            <button class="btn btn-light">Buscar</button>
                        </div>
                    </div>
                    </form>
                    
                    <% } %>
                    
                    <% if (user.sa == 0){ %>
                    <form action="/consultor_search">
                        <h4>Barra de búsqueda</h4>
                    <div class="form-group row" >
                        <div class="col-8">
                            <input class="form-control" type="search" name="search" placeholder="Buscar por categoría o test o access code" required/>
                        </div>
                        <div class="col-2">
                            <button class="btn btn-light">Buscar</button>
                        </div>
                    </div>
                    </form>
                    
                    <% } %>
                    
                </div>
                </div>                 
            </div>

        </div>
    </div>

     <% include partials/left_column %>

  </body>
</html>
