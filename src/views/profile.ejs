<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Perfil</title>
    <% include partials/head %>
  </head>
  <body>
    <div class="container">
      <header class="text-center">
        <h1>Perfil</h1>
      </header>
      <hr>
      <div class="container">
        <div class="col-sm-12">
          <div class="card">
            <div class="card-body">
              <h3 class="card-title"><span class="fa fa-user"></span><%sa=user.sa; if(sa==1){%> SuperAdmin <% }else{ %> Instructor <% } %></h3>
              <p>
                <strong>id</strong> : <% iduser=user._id %><%= iduser %> <br>
                <strong>email</strong> : <%= user.local.email %> <br>
                <strong>password</strong> : <%= user.local.password %> <br>
                
              </p>
              
              <a href="/logout" class="btn btn-light btn-sm">
              <button class="btn btn-danger">
                Cerrar Sesi√≥n
                </button>
              </a>
              
              <!-- OPCIONES SUPERADMIN -->
              
              <% if (sa == 1){ %>
              <a href="/signup" class="btn btn-light btn-sm">
                <button class="btn btn-default">
                Registrar Instructor
                </button>
              </a>
              
              <a href="/list" class="btn btn-light btn-sm">
                <button class="btn btn-success">
                Ver Lista Instructores
                </button>
              </a> 
              
              <a href="/categories" class="btn btn-light btn-sm">
                <button class="btn btn-primary">
                Ver Categorias
                </button>
              </a> 
              <br><br>
              <hr>
                <form action="/adminsearch">
                  <label for="example-search-input" class="col-12 col-form-label">Ingrese su busqueda por "ACCESS CODE, link o Test"</label>
                  <div class="form-group row" >
                      <div class="col-8">
                      <input class="form-control" type="search" name="search" placeholder="Ingrese su busqueda">
                  </div>
                  <div class="col-2">
                     <button>Buscar</button>
                  </div>
                  </div>
                </form>
              
         
              <% } %>
              
              <!-- OPCIONES INSTRUCTOR -->
              
              <% if (sa == 0){ %>
              <a href="/newpart" class="btn btn-light btn-sm">
              <button class="btn btn-primary">
                Registrar participante
              </button>
              </a>
              
              <a href="/link_inst/<%= iduser %>" class="btn btn-light btn-sm">
                <button class="btn btn-success">
                Ver mis links
                </button>
              </a>
              
              <a href="/list_part" class="btn btn-light btn-sm">
                <button class="btn btn-success">
                Ver Participantes asociados
                </button>
              </a>
              
               <% } %>
               
            </div>
          </div>
          <br>
          
          
         
        </div>
      </div>
      </div>
    </div>
  </body>
</html>
