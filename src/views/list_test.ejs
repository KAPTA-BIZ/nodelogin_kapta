<!DOCTYPE html>
<html lang="en">
<head>
	<title>Authentication with Node</title>
	<% include partials/head %>
</head>
<body>



    <div class="main-panel">
        <% include partials/navbar %>

        <div class="content">
            <div class="container-fluid">
                
                <div class="row">
                    <div class="col-4" style="margin: 20px;" >
                        <form action="/search" method="GET">
                              <label for="exampleInputEmail1">Buscar por categoria</label><br>
                              <select name="search" class="custom-select mb-2 mr-sm-2 mb-sm-0" id="inlineFormCustomSelect">
                                  <option selected>Seleccionar...</option>
                                  <% long_cat = cat.length; for(i=0; i<long_cat; i++) { %>  
                                  <option value="<%= cat[i].name %>"><%= cat[i].name %></option>
                                  <% }%>
                              </select>
                              <input type="text" value="<%= user._id %>" name="id" style="display:none">
                                <button type="submit" class="btn btn-primary">Buscar</button>
                          </form>
                          <br>
                      </div>
                      

                      <div class="col-7" style="margin: 20px;" >
                          <form action="/date" method="GET">
                            <label for="exampleInputEmail1">Buscar por fecha</label><br>
                              <div class="input-group input-daterange">
                                  <div class="input-group-addon">Desde</div>
                                  <input type="date"name="start" class="form-control">
                                  <div class="input-group-addon">Hasta</div>
                                  <input type="date" name="end" class="form-control">
                                  <input type="text" value="<%= user._id %>" name="id" style="display:none">
                                  <button type="submit" class="btn btn-primary" style="margin-left: 10px;">Buscar</button>
                              </div>
                              
                          </form>
                        </div>

                        
                        <!------ BUSQUEDA PARA ADMIN START ----->
                        
                        
                        <div class="col-md-12">
                        <div class="card strpied-tabled-with-hover">
                          <div class="card-header ">
                            <!-- Validar si fue busqueda por fecha-->
                            <%
                            var date_s=''
                            var date_e=''
                            const isset_s = (date_start) => typeof date_start !== 'undefined' 
                            typeof date_start=='undefined'?date_s='':date_s=date_start
                            const isset_e = (date_end) => typeof date_end !== 'undefined' 
                            typeof date_end=='undefined'?date_e='':date_e=date_end
                            %>
                            <%if((date_s&&date_e)!=''){%>
                            <p>Busqueda realizada entre <%= date_s %> y <%= date_e %></p>
                            <%}else{%><p></p><%}%>
                            
                            <!-- Search Bar Start -->
                            <form action="/adminsearch">
                            <h3>Barra de busqueda.</h3>
                            <div class="form-group row" >
                            <div class="col-8">
                                <%
                                var busq=''
                                const isset = (busqueda) => typeof busqueda !== 'undefined' 
                                typeof busqueda=='undefined'?busq='':busq=busqueda
                                %>
                              <input class="form-control" type="search" name="search" placeholder="Buscar link o test o access code" value="<%= busq  %>" required/>
                            </div>
                            <div class="col-2">
                              <button class="btn btn-light">Buscar</button>
                            </div>
                            </div>
                            </form>
                            <!-- Search Bar End -->
                          
                          <div class="card-body table-full-width table-responsive">
                              <% if(user.sa == 1) %>
                              <% { %>
                              <table class="table table-hover table-striped">
                                  <% if(val==1){ %>No hay datos disponibles para esta busqueda <% }else{ %>
                                    <thead>
                                    <tr>
                                      <th>Código de accesso</th>
                                      <th>Puntos Obtenidos</th>
                                      <th>Tiempo</th>
                                      <th>Categoría(s)</th>
                                      <th>Consultor</th>
                                      <th>Fecha</th>
                                    </thead>
                                    <tbody>
                                    <% result.forEach(function(items) { %> 
                                    <tr>
                                      <td><%= items.access_code %></td>
                                      <td><%= items.points_scored %></td>
                                      <td><%= items.duration %> </td>
                                      <% if(items.category_results){ %>
                                      <td>
                                      <%long=(items.category_results.length); for(i=0; i<long; i++){ %>
                                      <%= items.category_results[i].name %><br> <% } %>  
                                      </td><% } %>
                                      <td>
                                      <%longUser=(User.length); for(i=0; i<longUser; i++){ if((User[i].id)==(items.id_inst)){%>
                                      <%= User[i].local.email %><% }} %>  
                                      </td>
                                      <td>
                                          <% function timeConverter(UNIX_timestamp)
                                          {
                                             var a = new Date(UNIX_timestamp * 1000);
                                             var months = ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'];
                                             var year = a.getFullYear();
                                             var month = months[a.getMonth()];
                                             var date = a.getDate();
                                             var hour = a.getHours();
                                             var min = a.getMinutes();
                                             var sec = a.getSeconds();
                                             var time = date + ' ' + month + ' ' + year + ' ' + hour + ':' + min + ':' + sec ;
                                             return time;
                                          }
                                          %><%= timeConverter(items.time_started) %>
                                      </td>
                                      <% }); %>
                                    </tbody>
                                    <% } %>
                              </table>
                              <% } %>
                          </div>
                          
                         </div>
                      </div>
                  </div>
                  <!------ BUSQUEDA PARA ADMIN END ----->
                </div>
            </div>
        </div>
      </div>
     <% include partials/left_column %>
</body>
</html>
