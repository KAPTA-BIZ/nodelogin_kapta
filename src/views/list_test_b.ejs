<!DOCTYPE html>
<html lang="en">
<head>
	<title>A with Node</title>
	<% include partials/head %>
</head>
<body>



    <div class="main-panel">
        <% include partials/navbar %>

        <div class="content">
            <div class="container-fluid">
                <div class="row">


                    <div class="col-3" style="margin: 20px;" >
                        <form action="/search" method="GET">
                              <label for="exampleInputEmail1">Buscar por categoria</label><br>
                              <select name="search" class="custom-select mb-2 mr-sm-2 mb-sm-0" id="inlineFormCustomSelect">
                                  <option selected>Choose...</option>
                                  <% long_cat = cat.length; for(i=0; i<long_cat; i++) { %>  
                                  <option value="<%= cat[i].name %>"><%= cat[i].name %></option>
                                  <% }%>
                              </select>
                              <input type="text" value="<%= url %>" name="id" style="display:none">
                                <button type="submit" class="btn btn-primary">Buscar</button>
                          </form>
                      </div>

                      <div class="col-7" style="margin: 20px;" >
                    <form action="/date" method="GET">
                      <label for="exampleInputEmail1">Buscar por fecha</label>
                      <br/>
                      <div class="input-daterange input-group" id="datepicker">
                        <div class="input-group-addon">Desde</div>
                        <input type="text" id="from" name="start">
                        <div class="input-group-addon">Hasta</div>
                        <input type="text" id="to" name="end">
                        <input type="text" value="<%= url %>" name="id" style="display:none">
                        <button type="submit" class="btn btn-primary" style="margin-left: 10px;">Buscar</button>
                        
                      </div>

                    </form>


                    <script>
                      $( function() {
                        var dateFormat = "yyyy-mm-dd",
                          from = $( "#from" )
                            .datepicker({
                              dateFormat: "yy-mm-dd",
                              defaultDate: "+1w",
                              changeMonth: true,
                              numberOfMonths: 1
                            })
                            .on( "change", function() {
                              to.datepicker( "option", "minDate", getDate( this ) );
                            }),
                          to = $( "#to" ).datepicker({
                            dateFormat: "yy-mm-dd",
                            defaultDate: "+1w",
                            changeMonth: true,
                            numberOfMonths: 1
                          })
                          .on( "change", function() {
                            from.datepicker( "option", "maxDate", getDate( this ) );
                          });
                    
                        function getDate( element ) {
                          var date;
                          console.log(element.value)
                          try {
                            date = $.datepicker.parseDate( dateFormat, element.value );
                          } catch( error ) {
                            date = null;
                          }
                          return date;
                        }
                      } );
                    </script>
</div>
                        <div class="col-md-12">
                            <div class="card strpied-tabled-with-hover">
                                <div class="card-header ">
                                    <h4 class="card-title">Test del enlace:  <% if(link[0]) { %><%= link[0].link_name %><% } else{ %><%= url %><% } %></h4>
                                    <p class="card-category">Lista de resultados del test.</p>
                                </div>
                                <div class="card-body table-full-width table-responsive">
                                    <table class="table table-hover table-striped">
                                        <% if(val==1){ %>No hay datos disponibles para esta busqueda <% }else{ %>
                                          <thead>
                                          <tr>
                                            <th>Access Code</th>
                                            <th>Puntos Obtenidos</th>
                                            <th>Puntos Totales</th>
                                            <th>Tiempo</th>
                                            <th>Fecha</th>
                                            <th>Categor√≠a(s)</th>
                                          </thead>
                                          <tbody>
                                            
                                            <!-- TODO hacer lista de json y comparar para mostrar los que 
                                            ya se presentaron con la consulta a la base de datos -->
                                            
                                          <!--lista de access code json-->
                                         
                                         
                                           
                                          <% item.forEach(function(items){ %> 
                                          <tr>
                                          <!-- Filtrar id_inst con id capturado del instructor -->
                                          
                                            <td><%= items.access_code %></td>
                                            <td><%= items.points_scored %></td>
                                            <td><%= items.points_available %></td>
                                            <td><%= items.duration %> </td>
                                            <td>
                                                    <% function timeConverter(UNIX_timestamp)
                                                    {
                                                       var a = new Date(UNIX_timestamp * 1000);
                                                       var months = ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'];
                                                       var year = a.getFullYear();
                                                       var month = months[a.getMonth()];
                                                       var date = a.getDate();
                                                       var hour = a.getHours();
                                                       var min = a.getMinutes();
                                                       var sec = a.getSeconds();
                                                       var time = date + ' ' + month + ' ' + year + ' ' + hour + ':' + min + ':' + sec ;
                                                       return time;
                                                    }
                                                    %><%= timeConverter(items.time_started) %>
                                            </td>
                                            <% if(items.category_results){ %>
                                            <td>
                                            <%long=(items.category_results.length); for(i=0; i<long; i++){ %>
                                            <%= items.category_results[i].name %><br> <% } %>  
                                            </td><% } %>
                                            <% });%>
                                          </tbody>
                                          <% } %>
                                    </table>
                                    
                                </div>
                            </div>
                        </div>


                </div>
            </div>
        </div>

      </div>

     <% include partials/left_column %>
</body>
</html>
